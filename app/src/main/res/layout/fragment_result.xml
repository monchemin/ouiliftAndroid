<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment">

    <LinearLayout
        android:id="@+id/route_detail_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_weight="1.5"
            android:text="@string/route_date"
            style="@style/route_item_title_view_style"/>
        <TextView
            android:layout_weight="1.5"
            android:text="@string/route_hour"
            style="@style/route_item_title_view_style" />
        <TextView
            android:layout_weight="2.5"
            android:text="@string/route_from"
            style="@style/route_item_title_view_style"/>
        <TextView
            android:layout_weight="2.5"
            android:text="@string/route_to"
            style="@style/route_item_title_view_style"/>
        <TextView
            android:layout_weight="1"
            android:text="@string/route_price"
            style="@style/route_item_title_view_style" />
        <TextView
            android:layout_weight="1"
            android:text="@string/route_place"
            style="@style/route_item_title_view_style"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/route_detail_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/route_detail_title_container">
    </androidx.recyclerview.widget.RecyclerView>

    <include layout="@layout/view_loading"/>

</RelativeLayout>